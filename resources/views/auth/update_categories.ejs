<!doctype html>
<html lang="en">
<head>
  	<title>Cập Nhật Chuyên Mục</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js" integrity="sha512-q/dWJ3kcmjBLU4Qc47E4A9kTB4m3wuTY7vkFJDTZKjTs8jhyGQnaUrxa0Ytd0ssMZhbNua9hE+E7Qv1j+DyZwA==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>

<body id="login-body">
	<section>
        <div id="loading">
            <img src="../images/ajax-loading.gif" alt="Loading..."/>
        </div>
		<div class="container">
            <div class="position-absolute top-50 start-50 translate-middle w-75">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-2">
                        <h2 class="login-heading-section">Cập Nhật Chuyên Mục</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form id="register-form" method="POST">
                                <div class="form-group mb-2">
                                    <select class="form-select register-form-select-username" id="username">
                                        <option class="register-option-select-username" value="">Chọn tên đăng nhập</option>
                                        <% if(users) { users.forEach(user => { %>
                                            <option class="register-option-select-username" value="<%= user._id %>"><%= user.username %></option>
                                        <% }) } %>
                                    </select>
                                </div>
                                <div class="form-group mb-2">
                                    <select class="form-control js-register-category-multiple" multiple="multiple" id="categories">
                                        <% if(categories) { categories.forEach(category => { %>
                                            <option value="<%= category._id %>"><%= category.name %></option>
                                        <% }) } %>
                                    </select>
                                </div>
                                <div class="form-group d-flex mb-2">
                                    <div class="w-50">
                                        <a href="/">Trang chủ</a>
                                    </div>                                
                                </div>
                                <div class="form-group mb-2">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Cập nhật</button>
                                </div>
                            </form>
                            
                            <div id="alert-error-register" class="alert alert-danger" role="alert"></div>
                            <div id="alert-success-register" class="alert alert-success" role="alert"></div>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="../javascripts/main.js"></script>
</body>
</html>

